# LLM Provider Configuration
# Copy this file to .env and fill in your API keys

# ===== OpenAI Configuration =====
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o  # Options: gpt-4o, gpt-4-turbo-preview, gpt-3.5-turbo

# ===== Anthropic (Claude) Configuration =====
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022  # Options: claude-3-5-sonnet-20241022, claude-3-haiku-20240307

# ===== Google Gemini Configuration =====
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp  # Options: gemini-2.0-flash-exp, gemini-1.5-pro

# ===== Server Configuration =====
BACKEND_PORT=5555
FRONTEND_PORT=5173

# ===== LLM Defaults =====
# Default provider to use when multiple are configured
# Options: openai, anthropic, google
DEFAULT_LLM_PROVIDER=openai

# Default temperature (0.0 = deterministic, 1.0 = creative)
DEFAULT_TEMPERATURE=0.7

# Default max tokens per response
DEFAULT_MAX_TOKENS=2000

# ===== Cost Tracking =====
# Enable cost tracking and warnings
ENABLE_COST_TRACKING=true

# Maximum cost per request (in USD)
MAX_COST_PER_REQUEST=0.50

# Daily spending limit (in USD)
DAILY_SPENDING_LIMIT=10.00

# ===== Rate Limiting =====
# Maximum requests per minute
MAX_REQUESTS_PER_MINUTE=60

# Maximum tokens per minute
MAX_TOKENS_PER_MINUTE=90000

# ===== Advanced Settings =====
# Enable response caching (saves costs for repeated queries)
ENABLE_RESPONSE_CACHING=true

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL=3600

# Enable debug logging for LLM calls
LLM_DEBUG_LOGGING=false

# Retry failed requests
ENABLE_LLM_RETRY=true
MAX_LLM_RETRIES=3

# ===== Notes =====
# - Only set the API keys for providers you want to use
# - The system will automatically use whichever providers are configured
# - Patterns require at least one valid API key to function
# - Monitor your usage and costs through your provider dashboards

# Database connection URLs for testing
# Copy this file to .env and fill in your actual credentials

# PostgreSQL (required for PostgreSQL integration tests)
TEST_POSTGRESQL_URL=postgresql://testuser:testpass@localhost:5432/ia_modules_test

# MySQL (optional - for MySQL-specific tests)
# TEST_MYSQL_URL=mysql://testuser:testpass@localhost:3306/ia_modules_test

# MSSQL (optional - for MSSQL-specific tests)
# TEST_MSSQL_URL=mssql://testuser:testpass@localhost:1433/ia_modules_test

# Redis (optional - for Redis-based tests)
# TEST_REDIS_URL=redis://localhost:6379/0

# ============================================================
# LLM Provider API Keys (optional - for LLM integration tests)
# ============================================================
# These are only needed if you want to run LLM provider integration tests
# Get your keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/account/keys
# - Google AI: https://makersuite.google.com/app/apikey

# OpenAI API Key
# OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude models)
# ANTHROPIC_API_KEY=sk-ant-...

# Google AI API Key (for Gemini models)
# GOOGLE_API_KEY=AIza...

# Ollama (set to "true" if you have Ollama running locally)
# OLLAMA_AVAILABLE=false

# Model Configuration - Updated October 2024
# OpenAI: gpt-4o is the latest flagship model (as of Oct 2024)
OPENAI_MODEL=gpt-4o

# Anthropic: Claude Sonnet 4.5 is the latest (released Sept 2025)
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Google: Gemini 2.5 Flash is the latest stable model
GEMINI_MODEL=gemini-2.5-flash

